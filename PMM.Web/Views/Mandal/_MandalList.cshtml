
@model MandalListModel
@using PMM.Web.Models.Mandal;
@using PMM.Core;

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        @if (Model.Mandals.Count > 0)
        {
            <thead>
                <tr class="headings">
                    <th class="bold">SRNO</th>
                    <th class="bold">City</th>
                    <th class="bold">Mandal</th>
                    <th class="bold">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Mandals.Count; i++)
                {

                    var item = Model.Mandals[i];

                    <tr class="pointer">

                        <td>@(i + 1)</td>
                        <td>@item.CityTitle</td>
                        <td class="wordWrap">@item.MandalName</td>
                        <td>
                            <a href='@Url.RouteUrl("ManageMandal", new { id = item.Id })' class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>

                            <a href="javascript:DeleteMandal(@item.Id);" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                        </td>

                    </tr>


                }
            </tbody>
        }
        else
        {
            <tr class="col-md-12 pl5 pr5">
                <td>
                    <span class="font14">@CommonHelper.ValMsgEmptyNoRecord</span>
                </td>
            </tr>
        }
    </table>

</div>
