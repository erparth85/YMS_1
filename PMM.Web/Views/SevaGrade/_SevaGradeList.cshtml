
@model SevaGradeListModel
@using PMM.Web.Models.Yagna;
@using PMM.Core;
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        @if (Model.SevaGrades.Count > 0)
        {
            <tr class="headings">
                <th class="bold">ID</th>
                <th class="bold">Grade</th>
                <th class="bold">ACTION</th>
            </tr>
            for (int i = 0; i < Model.SevaGrades.Count; i++)
            {

                var item = Model.SevaGrades[i];

                <tr class="pointer">
                    <td class="wordWrap">@(i+1)</td>
                    <td class="wordWrap">@item.Grade</td>


                    <td class="wordWrap">
                        <a href='@Url.RouteUrl("ManageSevaGrade", new { id = item.Id })' class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>


                        <a href="javascript:deleteyagnasevaGrade(@item.Id);" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>

                    </td>
                </tr>

            }
          
        }
        else
        {
            <tr class="col-md-12 pl5 pr5">
                <td>
                    <span class="font14">@CommonHelper.ValMsgEmptyNoRecord</span>
                </td>
            </tr>

        }

    </table>
</div>