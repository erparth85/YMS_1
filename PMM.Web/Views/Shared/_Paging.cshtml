@model BasePagingModel
@using PMM.Web.Models.Paging;

<div class="text-center pt10 ">

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.PageNumber)
        {
            <a href="javascript:void(0);" class="page-number pager active-page" id="page@(i)"> @i</a>
        }
        else
        {
            <a class="page-number pager" href="javascript:void(0);" id="page@(i)">@i</a>
        }
    }
</div>


